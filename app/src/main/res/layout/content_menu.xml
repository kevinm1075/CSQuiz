<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu" tools:context="com.example.kevin.csquiz.MenuActivity"
    android:background="#333332"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1352a2"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CS Quiz"
            android:id="@+id/textView3"
            android:textColor="#f0f1ee"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="ffd464">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Structures"
            android:id="@+id/dataStructSwitch"
            android:checked="true"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/algSwitch"
            android:layout_alignRight="@+id/algSwitch"
            android:layout_alignEnd="@+id/algSwitch"
            android:textColor="#f0f1ee" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Algorithms"
            android:id="@+id/algSwitch"
            android:checked="true"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#f0f1ee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Question Types:"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#f0f1ee" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Number of Questions:"
            android:id="@+id/textView2"
            android:layout_above="@+id/numQuestionsText"
            android:layout_centerHorizontal="true"
            android:textColor="#f0f1ee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NUM_QUESTIONS"
            android:id="@+id/numQuestionsText"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:textColor="#f0f1ee" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:minWidth="300dp"
            android:indeterminate="false"
            android:layout_below="@+id/numQuestionsText"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="58dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/startBtn"
            android:minWidth="500dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.05" />
    </RelativeLayout>

</LinearLayout>
