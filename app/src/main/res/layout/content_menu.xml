<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu" tools:context="com.example.kevin.csquiz.MenuActivity"
    android:background="@drawable/bg_drawable"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/categories"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:nestedScrollingEnabled="true"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sorting"
                android:id="@+id/sortingButton"
                android:drawableLeft="@drawable/sort5"
                android:drawableRight="@drawable/arrow"
                android:drawablePadding="15dp"
                android:gravity="left|center_vertical"
                android:background="@drawable/button_drawable"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_span="13"
                android:nestedScrollingEnabled="false"
                android:layout_weight="0"
                android:textSize="9pt"
                android:focusableInTouchMode="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/linkedLists"
                android:id="@+id/linklistButton"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/link4"
                android:drawableRight="@drawable/arrow"
                android:drawablePadding="15dp"
                android:background="@drawable/button_drawable"
                android:layout_column="0"
                android:layout_span="13"
                android:textSize="9pt" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrays"
                android:id="@+id/arraysButton"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/arr"
                android:drawableRight="@drawable/arrow"
                android:drawablePadding="15dp"
                android:background="@drawable/button_drawable"
                android:layout_column="0"
                android:layout_span="13"
                android:textSize="9pt" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:measureWithLargestChild="false"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trees"
                android:id="@+id/treeButton"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/tre1"
                android:drawableRight="@drawable/arrow"
                android:drawablePadding="15dp"
                android:background="@drawable/button_drawable"
                android:layout_column="0"
                android:layout_span="13"
                android:textSize="9pt" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hashes"
                android:id="@+id/hashButton"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/hash1"
                android:drawableRight="@drawable/arrow"
                android:drawablePadding="15dp"
                android:background="@drawable/button_drawable"
                android:layout_column="0"
                android:layout_span="13"
                android:textSize="9pt" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:measureWithLargestChild="false"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stack"
                android:id="@+id/stackButton"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/stck"
                android:drawableRight="@drawable/arrow"
                android:drawablePadding="15dp"
                android:background="@drawable/button_drawable"
                android:layout_column="0"
                android:layout_span="13"
                android:textSize="9pt" />

        </TableRow>

    </TableLayout>

</LinearLayout>
